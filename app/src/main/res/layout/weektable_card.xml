<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="275dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:id="@+id/weektable_cardview"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background= "#4188FF"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2.5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/week_day"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

    <CheckBox android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/breakfast_checkbox"
        style="@style/CustomCheckbox02"
        android:layout_marginLeft="10dp"
        android:clickable="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BreakFast"
        android:id="@+id/breakfast_check_btn"
        android:layout_marginLeft="10dp"
        android:background="@drawable/custom_ripple"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:textSize="15sp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <CheckBox android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lunch_checkbox"
            style="@style/CustomCheckbox02"
            android:layout_marginLeft="10dp"
            android:clickable="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:id="@+id/lunch_check_btn"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_ripple"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:textSize="15sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <CheckBox android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dinner_checkbox"
            style="@style/CustomCheckbox02"
            android:layout_marginLeft="10dp"
            android:clickable="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"
            android:id="@+id/dinner_check_btn"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_ripple"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <CheckBox android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/snacks_checkbox"
            style="@style/CustomCheckbox02"
            android:layout_marginLeft="10dp"
            android:clickable="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snacks"
            android:id="@+id/snacks_check_btn"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_ripple"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:textSize="15sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <CheckBox android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/juice_checkbox"
            style="@style/CustomCheckbox02"
            android:layout_marginLeft="10dp"
            android:clickable="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juices"
            android:id="@+id/juice_check_btn"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_ripple"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <CheckBox android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/water_checkbox"
            style="@style/CustomCheckbox02"
            android:layout_marginLeft="10dp"
            android:clickable="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water"
            android:id="@+id/water_check_btn"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_ripple"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:textSize="15sp"
            />

    </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>