<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/week_inner_protein_header"
        android:text="Protein Intake:"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/week_inner_protein_average"
        android:text="Average daily Intake: 0kcal"
        android:textColor="?android:textColorPrimary"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/week_inner_protein_header"
        />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/week_inner_protein_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/week_inner_protein_average"
        />

</androidx.constraintlayout.widget.ConstraintLayout>