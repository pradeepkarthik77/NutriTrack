                android:layout_height="15dp"
                android:background="#E1AD01"
                android:id="@+id/carbs_color_indicator"
                android:layout_gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbs:"
                android:id="@+id/chart_carbs_text"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/carbs_color_indicator"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carbs_value_indicator"
                android:text="0/100 g"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="@+id/chart_carbs_text"
                app:layout_constraintTop_toBottomOf="@+id/chart_carbs_text"
                />

